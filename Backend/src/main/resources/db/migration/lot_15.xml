<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
  <changeSet id="15" author="ngh">
    <createTable tableName="payment_audit">
      <column name="id" type="bigserial">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="currency" type="varchar(20)"></column>
      <column name="amount" type="float"></column>
      <column name="payment_id" type="int8"></column>
      <column name="recipient_id" type="int8"></column>
      <column name="sender_id" type="int8"></column>
      <column name="gen_date" type="timestamp"></column>
      <column name="commission" type="bool"/>
    </createTable>

    <rollback>
    </rollback>
  </changeSet>
</databaseChangeLog>