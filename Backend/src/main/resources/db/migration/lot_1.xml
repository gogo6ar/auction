<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
  <changeSet id="1" author="ngh">
    <createSequence sequenceName="hibernate_sequence"
                    incrementBy="1"
                    maxValue="9223372036854775807"
                    minValue="1000"/>

    <createTable tableName="users">
      <column name="id" type="bigserial">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="email" type="varchar(255)">
        <constraints unique="true"></constraints>
      </column>
      <column name="first_name" type="varchar(255)"></column>
      <column name="last_name" type="varchar(255)"></column>
      <column name="password" type="varchar(255)"></column>
      <column name="user_rating" type="float8"></column>
      <column name="enabled" type="bool"></column>
      <column name="birthday" type="date"></column>
      <column name="gen_date" type="timestamp"></column>
      <column name="default_country" type="varchar(255)"></column>
      <column name="default_city" type="varchar(255)"></column>
      <column name="default_address" type="varchar(255)"></column>
      <column name="money_balance" type="float8"></column>
      <column name="need_tutorial" type="bool"></column>
    </createTable>


    <createTable tableName="user_roles">
      <column name="user_id" type="int8">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="role_id" type="int8">
        <constraints primaryKey="true"/>
      </column>
    </createTable>

    <createTable tableName="reset_password">
      <column name="id" type="bigserial">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="code" type="varchar(255)"></column>
      <column name="enabled" type="bool"></column>
      <column name="user_id" type="int8"></column>

    </createTable>

    <createTable tableName="roles">
      <column name="id" type="bigserial">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="user_role" type="varchar(20)">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <rollback>
      <dropTable tableName="user"/>
    </rollback>
  </changeSet>
</databaseChangeLog>